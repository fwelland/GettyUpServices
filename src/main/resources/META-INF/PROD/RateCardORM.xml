                 version="2.1">
    <entity class="fhw.model.RateCard">
        <table name="RATECARD"/>

        <named-query name="findByBankIdAndProgramId">
            <query>
                select rc from RateCard rc where rc.bankId = :bankId and rc.programId = :programId
            </query>
        </named-query>

        <attributes>
            <id name="bankId" />
            <id name="programId"/>
            <basic name="name" />
            <transient name="tiers"/>

